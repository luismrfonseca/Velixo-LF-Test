{
    "compilerOptions": {
      "target": "ES2020",
      "module": "esnext",
      "lib": ["DOM", "ES2020", "WebWorker"],
      "types": ["@types/office-js", "jest"],
      "typeRoots": ["node_modules/@types"],
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "isolatedModules": true,
      "strict": true,
      "skipLibCheck": true,
      "jsx": "react",
      "outDir": "dist",
    },
    "include": [
      "src/**/*",
      "src/tests/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
  